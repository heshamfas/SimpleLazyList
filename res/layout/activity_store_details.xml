<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreDetails"
    android:stretchColumns="1,2" >

<TableRow
    android:id="@+id/tr1"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="#fff" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="#fff"
        android:maxHeight="30dp"
        android:maxWidth="50dp"
        android:padding="1dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Store Id" />

     <TextView
         android:id="@+id/tv_storeId"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:padding="5dp"
         android:text="TextView" />
</TableRow>

<TableRow
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:background="#D5D9D5" >

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="left"
        android:padding="5dp"
        android:text="Store Name:" />

    <TextView
        android:id="@+id/tv_storeName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:text="name" />
</TableRow>

<TableRow
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:background="#7D7E7D" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="5dp"
        android:text="Address :" />

    <TextView
        android:id="@+id/tv_storeAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:text="TextView" />
</TableRow>

<TableRow
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:background="#D5D9D5" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="5dp"
        android:text="City" />

    <TextView
        android:id="@+id/tv_storeCity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:padding="5dp"
        android:text="TextView" />

</TableRow>

<TableRow
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:background="#7D7E7D" >

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="5dp"
        android:text="State :" />

    <TextView
        android:id="@+id/tv_storeState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:padding="5dp"
        android:text="TextView" />

</TableRow>

<TableRow
    android:id="@+id/tableRow2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#D5D9D5" >

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:maxWidth="20dp"
        android:padding="5dp"
        android:text="Zipcode"
        android:width="20dp" />

    <TextView
        android:id="@+id/tv_StoreZip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:padding="5dp"
        android:text="TextView" />

</TableRow>

<TableRow
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:background="#7D7E7D" >

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="5dp"
        android:text="Phone :" />

    <TextView
        android:id="@+id/tv_StorePhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:padding="5dp"
        android:text="TextView" />

</TableRow>

<TableRow
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:background="#D5D9D5" >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="5dp"
        android:text="Latitude" />

    <TextView
        android:id="@+id/tv_storeLatitude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:padding="5dp"
        android:text="TextView" />

</TableRow>

<TableRow
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:background="#7D7E7D" >

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="5dp"
        android:text="Longitude" />

    <TextView
        android:id="@+id/tv_StoreLongitude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:padding="5dp"
        android:text="TextView" />

</TableRow>

<TableRow
    android:id="@+id/tableRow1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#D5D9D5" >

    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_weight="2"
        android:background="#1D1C1A"
        android:onClick="backToList"
        android:paddingLeft="10dp"
        android:textColor="#fff"
        android:text="&lt;- Back to Store List" />

</TableRow>

</TableLayout>